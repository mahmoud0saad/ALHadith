<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/no_internet_relative_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_18sdp"
        android:alpha=".6"
        android:background="@drawable/internet_background_round"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/no_internet_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_signal_wifi_off_black_24dp"/>
    <TextView
        android:id="@+id/internet_connect_textview"
        android:textColor="#fff"
        android:layout_centerInParent="true"
        android:text="@string/internet_connection_message"
        android:layout_below="@+id/no_internet_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/internet_message_text_size" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/internet_connect_textview"
            android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/reload_internet_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:background="@drawable/round_background"
                android:text="@string/button_reload_internet"
                android:textSize="@dimen/button_recycler_text_size" />

            <Button
                android:id="@+id/my_download_button"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_22sdp"
                android:layout_margin="@dimen/_8sdp"
                android:background="#36ABE9"
                android:paddingLeft="@dimen/_8sdp"
                android:paddingRight="@dimen/_8sdp"
                android:text="@string/my_download_text_button"
                android:textSize="@dimen/button_recycler_text_size" />
        </LinearLayout>
</RelativeLayout>
</layout>